{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="blog-post">
            <h2 class="blog-post-title">{{ auto.brand }}</h2>
            <p class="blog-post-meta">January 1, 2014 by <a href="#">Mark</a></p>

            <blockquote>
                <p>{{ auto.description }}</p>
            </blockquote>

            <dev class="price">
                <span>Price: </span>{{ auto.price }} <span class="currency">$</span>
            </dev>

            <div class="region">
                <span>Region: </span>{{ auto.region.name }}
            </div>

            <div class="year">
                <span>Year: </span>{{ auto.year }}
            </div>

            <div class="condition">
                <span>Condition: </span>{{ auto.condition.name }}
            </div>

        </div><!-- /.blog-post -->

    </div>

{% endblock %}
